#!/bin/bash
#
# Based on 'orientdb.sh', but suitable for non-root users; also
# configured for standard conveyor setup.
if [ ! -z ${stdenv+x} ]; then #if $stdenv set
    HOME="$home"
fi

ORIENTDB_DIR="$HOME/.conveyor/runtime/dogfoodsoftware.com/conveyor-orientdb"
DATA_DIR="$HOME/.conveyor/data/dogfoodsoftware.com/conveyor-orientdb"
LOG_DIR="$DATA_DIR/log"

usage() {
	echo "Usage: orientdb: <start|stop|status>"
	exit 1
}

start() {
    set +e
	status
	set -e
	if [ $PID -gt 0 ]
	then
		echo "OrientDB server daemon was already started. PID: $PID"
		return $PID
	fi
	echo "Starting OrientDB server daemon..."
	cd "$ORIENTDB_DIR/bin"
	nohup ./server.sh >> $LOG_DIR/orientdb.log 2>&1 &
}

stop() {
	status
	if [ $PID -eq 0 ]
	then
		echo "OrientDB server daemon is already not running"
		return 0
	fi
	echo "Stopping OrientDB server daemon..."
	cd "$ORIENTDB_DIR/bin"
	nohup ./shutdown.sh >> $LOG_DIR/orientdb.log 2>&1 &
}

status() {
	PID=`ps -ef | grep 'orientdb.www.path' | grep java | grep -v grep | awk '{print $2}'`
	if [ "x$PID" = "x" ]
	then
		PID=0
	fi

	# if PID is greater than 0 then OrientDB is running, else it is not
	return $PID
}

if [ "x$1" = "xstart" ]
then
	start
	exit 0
fi

if [ "x$1" = "xstop" ]
then
	stop
	exit 0
fi

if [ "x$1" = "xstatus" ]
then
	status
	if [ $PID -gt 0 ]
	then
		echo "OrientDB server daemon is running with PID: $PID"
	else
		echo "OrientDB server daemon is NOT running"
	fi
	exit $PID
fi

usage
